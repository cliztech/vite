{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@poody/config/tsconfig/base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["node", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "@poody/ui": ["../../packages/ui/src"],
      "@poody/games": ["../../packages/games/src"],
      "@poody/config/*": ["../../packages/config/*"]
    }
  },
  "include": ["app", "remix.env.d.ts"],
  "exclude": ["node_modules", "build"]
}

